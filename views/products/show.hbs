{{#section 'stylesheets'}}
{{/section}}
<div class="pb-3 gradient-background text-white">
  <h3 class="text-center font-black">Ver produto</h3>
</div>

<div class="container">
  <div class="row justify-content-center mx-sm-auto mx-md-9">
    <!-- Product Title -->
    <div class="col-12 col-md-6 mb-5">
      <i class="text-muted">Produto {{generic}}</i>
      <h2 class="my-0 py-0 mb-4">{{name}}</h2>

      <!-- Product Description -->
      <h4>Descrição</h4>
      <p>
        {{description}}
      </p>
      <!-- end Product Description -->
    </div>
    <!-- end Product Title -->

    <!-- Quotation -->
    <div class="col-12 col-md-6 pb-2 mb-5">
      <form action="#" method="post">
        <div class="row mb-3">
          <div class="form-group col">
            <label class="text-muted" for="amount">Quantidade</label>
            <div class="input-group">
              <input class="form-control" type="number" name="amount" id="amount" value="1">
              <div class="input-group-prepend">
                <div class="input-group-text">{{unit}}</div>
              </div>
            </div>
          </div>
        </div>
        <button class="w-100 text-white btn btn-default bg-green my-2" type="submit" name="button">Cotar produto</button>
        <!-- <button class="w-100 text-white btn btn-default bg-dark" type="button" name="button">Cotar similar</button> -->
      </form>
    </div>
    <!-- end Quotation -->

    <!-- Product Characteristics -->
    <div class="col-12 col-md-6 mb-5">
      <h4>Características</h4>
      <div class="row">
        <div class="col-6">
          <dt>Ingrediente ativo</dt>
          {{#each chem}}
            <dd>{{name}}</dd>
          {{/each}}
        </div>
        <div class="col-6">
          <dt>Fabricante</dt>
          <dd>{{manufacturer}}</dd>
        </div>
        <div class="col-12">
          <dt>Categoria</dt>
          <dd>{{category}}</dd>
        </div>
      </div>
    </div>
    <!-- end Product Characteristics -->

    <!-- Payment Options -->
    <div class="col-12 col-md-6 mb-5">
      <h4>Formas de pagamento</h4>
      <div class="">
        <i class="fas fa-barcode fa-4x mr-2"></i>
      </div>
    </div>
    <!-- end Payment Options -->
  </div>
</div>

{{#section 'scripts'}}
{{/section}}
