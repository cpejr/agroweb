{{#section 'stylesheets'}}
{{/section}}

<!-- Filters Header -->
<div class="filters-header row justify-content-center mx-1 mt-2 mb-1">
  <div class="col-12 col-md-8 d-flex align-items-center justify-content-between">
    <div class="">
      <h4 class="my-auto">Usuários Cadastrados</h4>
    </div>
    <div class="">
      <button type="button" name="button" class="btn ml-1">
        <i class="fas fa-sort-amount-down "></i>
      </button>
      <button type="button" name="button" class="btn ml-1">
        <i class="fas fa-filter "></i>
      </button>
    </div>
  </div>
</div>
<!-- end Filters Header -->

<!-- Users list -->
<div id="results-list" class="row justify-content-center mt-2 mx-0">
  <div class="col-12 col-md-8">
    <table class="table table-responsive table-striped table-dark">
      <thead>
        <tr>
          <th scope="col">Nome</th>
          <th scope="col">Status</th>
          <th scope="col">Tipo</th>
          <th scope="col">E-mail</th>
          <th scope="col">CPF/CNPJ</th>
        </tr>
      </thead>
      <tbody>
      {{#each users}}
        <tr>
          <th scope="row">{{fullName}}</th>
          {{#ifCond active true}}
            <td><div class="badge2 badge-success px-2 text-center">Ativo</div></td>
          {{else ifCond active false}}
            <td><div class="badge2 badge-danger px-2 text-center">Inativo</div></td>
          {{/ifCond}}
          <td>{{type}}</td>
          <td>{{email}}</td>
          <td>{{doc}}</td>
        </tr>
      {{/each}}
      </tbody>
    </table>
    <!-- <div class="card mb-1" data-status="{{status}}">
      <div class="card-body">
        <div class="text-center">
          <h7 class="card-title align-text-top text-gray">Usuário - {{firstName}} {{lastName}}</h7>
          <div class="w-100">
          </div>
            <span class="badge badge-primary">
              <h6>{{type}}</h6>
            </span>
          <p class="card-text align-text-bottom text-gray">{{email}}</p>
        </div>
      </div>
    </div>
  </div>
</div>
