{{#section 'stylesheets'}}
<stylesheet src="/stylesheets/style.css"></stylesheet>
<stylesheet src="/stylesheets/estilos.css"></stylesheet>
{{/section}}

<div class="">
  <div class="text-center p-3 gradient-background text-white">
    <h3 class="font-black">Grupos de compra</h3>
  </div>
  <div class="text-center p-3">
    <button type="button col-1 color-muted" name="button" class="btn ml-1">
      <i class="fas fa-sort-amount-down float-left"></i>
    </button>
    <button type="button col-1 color-muted" name="button" class="btn ml-1">
      <i class="fas fa-filter float-left"></i>
    </button>
  </div>

<div style="overflow-x:auto;">
<table class="table table-striped text-center table-light col-md-12 ">
  <thead>
    <tr>
      <th scope="col font-black">Código do produto</th>
      <th scope="col font-black">Nome do produto</th>
      <th scope="col font-black">Preço atual</th>
      <th scope="col font-black">Dono</th>
      <th scope="col font-black">Quantidade sendo contada</th>
      <th scope="col font-black">Fechamento</th>
    </tr>
  </thead>
  <tbody>
    {{#each groups}}
    <tr>
      <td class="font-book">{{_id}}</td>
      <td class="font-book">{{offer.product.name}}</td>
      <td class="font-book">{{price}}</td>
      <td class="font-book">{{offer.seller.responsible.name}}</td>
      <td class="font-book">{{amount}}</td>
      <td class="font-book">
        <form action="/groups/{{id}}?_method=PUT" method="POST">
          <input type="date" name="group[closeDate]" class="form-control" value="{{closeDate}}">
          <button type="submit" class="btn bg-green text-light2">Salvar</button>
        </form>
      </td>
    </tr>
      {{/each}}
    </tbody>
  </table>
</div>
</div>

{{#section 'scripts'}}
{{/section}}
