{{#section 'stylesheets'}}
{{/section}}

<div class="container">
  <div class="row justify-content-center mx-sm-auto mx-md-9">
    <!-- Product Title -->
    <div class="col-12 col-md-6 mb-5">
      <i class="text-muted">Produto {{generic}}</i>
      <h2 class="my-0 py-0">{{product.name}}</h2>
      <h5 class="text-muted">R$ {{price.high}} / {{product.unit}}</h5>
      <small class="text-muted">O preço do produto muda de acordo com a quantidade cotada.</small>

      <!-- Product Description -->
      <h4 class="mt-3">Descrição</h4>
      <p>
        {{product.description}}
      </p>
      <!-- end Product Description -->
    </div>
    <!-- end Product Title -->

    <!-- Quotation -->
    <div class="col-12 col-md-6 pb-2 mb-5">
      <form action="#" method="post">
        <div class="row mb-3">
          <div class="form-group col">
            <label class="text-muted" for="amount">Quantidade</label>
            <div class="input-group">
              <input class="form-control" type="number" name="amount" id="amount" value="1" min="1">
              <div class="input-group-prepend">
                <div class="input-group-text">{{product.unit}}</div>
              </div>
            </div>
          </div>
          <div class="form-group my-auto col">
            <label class="text-muted" for="delivery">Entrega: </label>
            <h7 id="delivery">{{delivery}}</h7>
          </div>
        </div>

        <button class="w-100 text-white btn btn-default bg-green my-2" type="submit" name="button">Cotar produto</button>
        <button class="w-100 text-white btn btn-default bg-dark" type="button" name="button">Cotar similar</button>
      </form>
    </div>
    <!-- end Quotation -->

    <!-- Product Characteristics -->
    <div class="col-12 col-md-6 mb-5">
      <h4>Características</h4>
      <div class="row">
        <div class="col-6">
          <dt>C. agronômica</dt>
          <dd>Feromônio</dd>
        </div>
        <div class="col-6">
          <dt>Toxicologia</dt>
          <dd>Pouco tóxico</dd>
        </div>
        <div class="col-6">
          <dt>Inflamabilidade</dt>
          <dd>Inflamável</dd>
        </div>
        <div class="col-6">
          <dt>Formulação</dt>
          <dd>Comprimidos e sachês</dd>
        </div>
        <div class="col-6">
          <dt>Ingrediente ativo</dt>
          {{#each product.chem}}
            <dd>{{name}}</dd>
          {{/each}}
        </div>
        <div class="col-6">
          <dt>Fabricante</dt>
          <dd>{{product.manufacturer}}</dd>
        </div>
      </div>
    </div>
    <!-- end Product Characteristics -->

    <!-- Payment Options -->
    <div class="col-12 col-md-6">
      <h4>Formas de pagamento</h4>
      <div class="">
        <i class="fab fa-cc-visa fa-4x mr-2 text-info"></i>
        <i class="fab fa-cc-mastercard fa-4x mr-2 text-danger"></i>
        <i class="fas fa-barcode fa-4x mr-2"></i>
      </div>
      <a class="tex-muted" href="#"><small>Mais informações</small></a>
    </div>
    <!-- end Payment Options -->

  </div>
</div>

{{#section 'scripts'}}
{{/section}}
