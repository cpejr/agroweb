            <i class="d-none d-sm-inline d-xl-none card-icon fas fa-tint fa-3x align-self-center"></i>
            <i class="d-none d-xl-inline card-icon fas fa-tint fa-4x align-self-center"></i>
            {{/ifCond}}
          </div>

          <div class="p-2">
            <div class="vl">
              <div class="ml-1 mb-1 mb-md-2 mb-xl-3 text-gray3">
                <h5 class="text-left align-text-top card-text font-black text-green mobile-fontCT mobile-font4  text-uppercase">
                  {{offer.product.name}}
                </h5>
              </div>

              <div class="ml-1 mb-1 mb-md-2 mb-xl-3">
                <h5 class=" font-book text-left align-text-top card-text font-black  text-gray4 mobile-font2 ">
                  {{status}}
                </h5>
              </div>

            <div class="ml-1 mb-1 mb-md-2 mb-xl-3">
              <div class="text-left side-animation">
                <h4 class="font-book text-gray4  mobile-font2  d-inline" data-usd={{offer.usd}}>
                  R$ {{priceBought}}
                </h4>
              </div>
            </div>

            <div class="row align-right">
              <div class="smaller-font d-flex text-center align-bottom">
                <div class="ml-3 ml-lg-4 text-gray3">
                  <p class="text-uppercase  text-dark font-book mobile-font0 mobile-font2  ">Compra
                    {{#ifCond offer.delivery '48 horas'}}
                    <span class="count text-dark mobile-font0 mobile-font2 "> <br/>Solo</span>
                    {{else }}
                    <span class="count text-dark mobile-font0 mobile-font2 "> <br/>Grupo</span>
                    {{/ifCond}}
                  </p>
                </div>

                <div class="ml-2  ml-md-3 ml-lg-3 ml-xl-5 text-gray3">
                  <p class="text-uppercase text-dark font-book mobile-font0   mobile-font2">Entrega
                    <span class="count text-dark mobile-font0 "> <br/>{{offer.delivery}}</span>
                  </p>
                </div>

                <div class="ml-2 ml-md-3 ml-lg-3 ml-xl-5 text-gray3">
                  <p class="text-uppercase text-center text-dark  font-book mobile-font0   mobile-font2">Qnt
                    <span class="count text-center text-dark mobile-font0 "> <br/>{{amountBought}}</span>
                  </p>
                </div>
                <div class="ml-2 ml-md-3 ml-lg-3 ml-xl-5 text-gray3">
                  <p class="text-uppercase font-book mobile-font0  text-dark mobile-font2  mb-0" >
                    Custo por unidade
                    {{#ifCond offer.usd false}}
                    <span class="count text-center text-dark  mobile-font0 text-dark mobile-font2  mt-0"> <br/>R$ {{unitPrice}}</span>
                    {{/ifCond}}
                    </p>
                    {{#ifCond offer.usd true}}
                    <span class="count text-center text-dark  mobile-font1  mt-0" data-usd={{offer.usd}}> <br/>R$ {{unitPrice}}</span>
                    <i class="text-gray3 mt-2 font-light mobile-font1 d-inline">
                      / {{offer.product.unit}}
                    </i>
                    {{/ifCond}}
                </div>
              </div>
            </div>
            {{#if franchisee}}
