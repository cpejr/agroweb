{{#section 'stylesheets'}}
{{/section}}

<div class="card text-center">
  <div class="row mx-auto card-body">
    <h3 class="card-title">Princ√≠pios ativos</h3>
    <span class="float-right pull-right">
      <button onclick="location.href='/chems/new'" class="btn btn-outline-info">Novo</button>
    </span>
  </div>
</div>
<!-- Chems list -->
<div id="results-list" class="row justify-content-center mt-2 mx-0">
  <div class="text-center">
    <table class="table table-responsive table-striped table-dark col-md-12">
      <thead>
        <tr>
          <th scope="col">Nome</th>
          <th scope="col">Editar</th>
          <th scope="col">Excluir</th>
        </tr>
      </thead>
      <tbody>
      {{#each chems}}
        <tr>
          <th scope="row">{{name}}</th>
          <th scope="row">
            <button onclick="location.href='/chems/{{id}}/edit'" class="btn btn-outline-info">Editar</button>
          </th>
          <th scope="row">
            <form method="post">
            <!-- <form action="/chems/{{id}}?_method=DELETE" method="POST"> -->
              <button type="submit" class="btn btn-outline-danger">Excluir</button>
            </form>
          </th>
        </tr>
      {{/each}}
      </tbody>
    </table>
  </div>
</div>
<!-- end chems list -->

