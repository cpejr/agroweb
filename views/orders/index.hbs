<!-- NavBar -->
<div class="pos-f-t">
  <nav class="navbar navbar-dark">
    <button class="btn btn-outline-dark" type="button" onclick="history.back()">
      <i class="fas fa-arrow-left fa-2x"></i>
    </button>

    <form id="navbar-form" action="./results" method="get" class="float-right my-2 my-lg-0 my-sm-0">
      <input class="form-control my-2 my-sm-0 float-right" type="search" placeholder="Buscar">
      <button class="btn btn-outline-dark " type="button">
        <i class="fas fa-search fa-2x"></i>
      </button>
    </form>
  </nav>
</div>
<!-- end NavBar -->

<!-- Filters Header -->
<div class="filters-header row justify-content-center mx-1 mt-2 mb-1">
  <div class="col-12 col-md-8 d-flex align-items-center justify-content-between">
      <h4 class="my-auto mx-auto">{{title}}</h4>
    <div class="">
      <button type="button" name="button" class="btn ml-1">
        <i class="fas fa-sort-amount-down "></i>
      </button>
      <button type="button" name="button" class="btn ml-1">
        <i class="fas fa-filter "></i>
      </button>
    </div>
  </div>
</div>
<!-- end Filters Header -->

<!-- OrdersList-->

<div id="results-list" class="row justify-content-center mt-2 mx-0">
  <div class="col-12 col-md-6">
    {{#each orders}}
      <div class="card mb-1">
        <div class="card-body">
          <div class="text-center">
            <h7 class="card-title align-text-top text-gray">Compra #{{id}} - 19/03/2018</h7>
            <div class="w-100">
            </div>
            {{#ifCond status 'Cancelado'}}
              <span class="badge badge-danger">
            {{else ifCond status 'Em andamento'}}
              <span class="badge badge-primary">
            {{else ifCond status 'Entregue'}}
              <span class="badge badge-success">
            {{/ifCond}}
                <h6>{{status}}</h6>
              </span>
            <p class="card-text align-text-bottom text-gray">Prazo para pagamento excedido</p>
          </div>
          <h5 class="card-title align-text-top product-myOrders">{{name}}</h5>
        </div>
      </div>
    {{/each}}
  </div>
</div>
<!-- end OrdersList -->
