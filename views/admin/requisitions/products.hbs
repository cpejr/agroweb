{{#section 'stylesheets'}}
{{/section}}

<div class="text-center pb-3 gradient-background text-white">
  <h3 class="font-black">Requisições de produtos</h3>
</div>

{{#if products}}
  <div class="container">
    <p>Digite logo abaixo para buscar alguma requisição de produto específica:</p>
    <input class="form-control" id="myInput" type="text" placeholder="Pesquisar">
    <br>

    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th class="text-center">Nome</th>
          <th colspan="3" class="text-center">Opções</th>
        </tr>
      </thead>
      <tbody id="myTable">
        {{#each products}}
        <tr>
          <th scope="row">{{name}}</th>
          <td>
            <button onclick="location.href='/products/{{_id}}'" class="btn btn-outline-info font-book">
              Ver
            </button>
          </td>
          <td>
            <form  method= "POST" action="/admin/{{id}}/requisitions/products">
              <button type="submit" align="center" class="btn btn-outline-success" name="status">
                Aprovar
              </button>
            </form>
          </td>
          <td>
            <form action="/admin/{{id}}?_method=DELETE" method="POST">
              <button type="submit" align="center" class="btn btn-outline-danger" name="status">
                Reprovar
              </button>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

{{else}}
<div class="container">
  <p class="text-center font-light">Não há novas requisições de produtos.</p>
</div>
{{/if}}
