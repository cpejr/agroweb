{{#section 'stylesheets'}}
{{/section}}

<!-- Filters Header -->
<div class="filters-header row justify-content-center mx-1 mt-2 mb-1">
  <div class="col-12 col-md-8 d-flex align-items-center justify-content-betwee">
      <h4 class="my-auto mx-auto">{{title}}</h4>
    <div class="flex-right">
      <button type="button" name="button" class="btn ml-1">
        <i class="fas fa-sort-amount-down "></i>
      </button>
      <button type="button" name="button" class="btn ml-1">
        <i class="fas fa-filter "></i>
      </button>
    </div>
  </div>
</div>
<!-- end Filters Header -->

<!-- OrdersList-->

<div id="results-list" class="row justify-content-center mt-2 mx-0">
  <div class="col-12 col-md-6">
    {{#each orders}}
      <div class="card mb-1">
        <div class="card-body">
          <div class="text-center">
            <h7 class="card-title align-text-top text-gray">Compra #{{_id}}</h7>
            <div class="w-100">
            </div>
            {{#ifCond status 'Cancelado'}}
              <span class="badge badge-danger mt-2">
            {{else ifCond status 'Em andamento'}}
              <span class="badge badge-primary mt-2">
            {{else ifCond status 'Entregue'}}
              <span class="badge badge-success mt-2">
            {{/ifCond}}
              <h6>{{status}}</h6>
            </span>
          </div>
          <h5 class="card-title align-text-top product-myOrders">{{offer.product.name}}</h5>
        </div>
      </div>
    {{/each}}
  </div>
</div>
<!-- end OrdersList -->

{{#section 'scripts'}}
{{/section}}
