{{#section 'stylesheets'}}
<stylesheet src="/stylesheets/style.css"></stylesheet>
<stylesheet src="/stylesheets/estilos.css"></stylesheet>
{{/section}}

  <div class="text-center p-3 gradient-background text-white">
    <h3 class="font-black">Grupos de compra</h3>
  </div>

  <div style="overflow-x:auto;">
    <div class="container">
      <p>Digite logo abaixo para buscar algum grupo de compras específico:</p>
      <input class="form-control" id="myInput" type="text" placeholder="Pesquisar">
      <br>

      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>Código do produto</th>
            <th>Nome do produto</th>
            <th>Preço atual</th>
            <th>Dono</th>
            <th>Quantidade sendo contada</th>
            <th colspan="2">Fechamento</th>
          </tr>
        </thead>
        <tbody id="myTable">
          {{#each groups}}
          <tr>
            <td class="font-book">{{_id}}</td>
            <td class="font-book">{{offer.product.name}}</td>
            <td class="font-book">{{price}}</td>
            <td class="font-book">{{offer.seller.responsible.name}}</td>
            <td class="font-book">{{amount}}</td>

            <form action="/groups/{{id}}?_method=PUT" method="POST">
              <td class="font-book">
                <input type="date" name="group[closeDate]" class="form-control" value="{{closeDate}}">
              </td>
              <td class="font-book">
                <button type="submit" class="btn bg-green text-light2">Salvar</button>
              </td>
            </form>
          </tr>
            {{/each}}
            </tbody>
          </table>
        </div>
      </div>

{{#section 'scripts'}}
<script src="/javascripts/navbar.js"></script>
<!-- <script src="/javascripts/filter.js"></script> -->
<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
{{/section}}
