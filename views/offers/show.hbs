{{#section 'stylesheets'}}
{{/section}}

<div class="container">
    <div class="row mx-sm-auto mx-md-9">
    <!-- Sale Title -->
    <div class="col-12 col-md-6 mb-5 justify-content-center">
      <p class="ml-4">Venda#{{_id}}</p>
      <div class="w-100">
      </div>
      {{#ifCond status 'Aguardando Pagamento'}}
        <span class="badge badge-danger">
      {{else ifCond status 'Pagamento confirmado'}}
        <span class="badge badge-primary">
      {{else ifCond status 'Produto enviado'}}
        <span class="badge badge-success">
      {{/ifCond}}
        <h6>{{status}}</h6>
      </span>
      <h2>{{offer.product.name}}</h2>
      <h4 class="text-gray">R$ {{unitPrice}}</h4>
    </div>
    <!-- end Sale Title -->

    <!-- Product Description -->
    <div class="row m-1">
      <div class="col-6">
        <dt class="text-gray">Entrega</dt>
        <h4>{{delivery}}</h4>
      </div>
      <div class="col-6">
        <dt class="text-gray">Quantidade vendida</dt>
        <h4>{{amountBought}}</h4>
      </div>
      <div class="col-6">
        <dt class="text-gray">Preço total</dt>
        <h2>R$ {{priceBought}}</h2>
      </div>
      <div class="col-6">
        <dt class="text-gray mb-1">Pagamento</dt>
        <h4>{{payment}}</h4>
      </div>

    <!-- Seller info -->
    <div class="col-12 col-md-6 mb-5 justify-content-center">
      <h2>Dados do comprador</h2>
      <p class="text-gray">Nome</p>
      <h4 class="mb-2">{{user}}</h4>
      <p class="text-gray">Contato</p>
      <h4>{{phone}}</h4>
      <h4 class="mb-5">{{email}}</h4>
    </div>
    <!-- end Seller info -->

    <!-- Product Characteristics -->
    <div class="col-12 col-md-6 mb-5">
      <h4>Características</h4>
      <div class="row">
        <div class="col-6">
          <dt>C. agronômica</dt>
          <dd>Feromônio</dd>
        </div>
        <div class="col-6">
          <dt>Toxicologia</dt>
          <dd>Pouco tóxico</dd>
        </div>
        <div class="col-6">
          <dt>Inflamabilidade</dt>
          <dd>Inflamável</dd>
        </div>
        <div class="col-6">
          <dt>Formulação</dt>
          <dd>Comprimidos e sachês</dd>
        </div>
        <div class="col-6">
          <dt>Ingrediente ativo</dt>
          {{#each product.chem}}
            <dd>{{name}}</dd>
          {{/each}}
        </div>
        <div class="col-6">
          <dt>Fabricante</dt>
          <dd>{{product.manufacturer}}</dd>
        </div>
      </div>
    </div>
    <!-- end Product Characteristics -->

    <!-- Payment Options -->
    <div class="col-12 col-md-6">
      <h4>Formas de pagamento</h4>
      <div class="">
        <i class="fab fa-cc-visa fa-4x mr-2 text-info"></i>
        <i class="fab fa-cc-mastercard fa-4x mr-2 text-danger"></i>
        <i class="fas fa-barcode fa-4x mr-2"></i>
      </div>
      <a class="tex-muted" href="#"><small>Mais informações</small></a>
    </div>
    <!-- end Payment Options -->

  </div>
</div>

{{#section 'scripts'}}
{{/section}}
