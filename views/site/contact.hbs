<div class="container mb-5">
  <div class="row mb-5" id="contact">
    <div class="col-12">
      <div class="col-12 mt-5 p-3 text-center">
        <h1>Contato</h1>
      </div>

      <!-- Contact Form -->
      <!-- novalidate -->
      <!-- <form action="/site/contact" method="POST" novalidate> -->
      <div class="row">
        <div class="col-md-6 col-12">
          <form action="/site/contact" method="POST" novalidate>
            <div class="form-group">
              <label for="name" class="">Nome</label>
              <input type="text" class="col-12 col-md-9 form-control" id="name" name="user[name]" required>
            </div>
            <div class="form-group">
              <label for="email" class="">E-mail</label>
              <input type="email" class="col-12 col-md-9 form-control" id="email" name="user[clientEmail]" required>
            </div>
            <div class="form-group">
              <label for="name" class="">Assunto</label>
              <input type="text" class="col-12 col-md-9 form-control" id="subject" name="user[subject]" required>
            </div>
            <div class="form-group">
              <label for="text" class="">Mensagem</label>
              <textarea type="text" class="col-12 col-md-9 form-control" id="message" rows="3" name="user[content]" required></textarea>
            </div>

            <div class="row">
              <div class="col-12 col-sm-4 col-md-4">
                <button type="submit" class=" btn w-100 bg-green mx-auto text-white">Enviar</button>
              </div>
            </div>
          </form>
          <!-- end Contact Form -->
        </div>

        <div class="col-md-6 col-12">
          <!-- <div id="map-container-2" class="z-depth-1" style="height: 500px"></div> -->
        </div>
    </div>
  </div>
