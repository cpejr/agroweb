{{#section 'stylesheets'}}
{{/section}}

<!-- Filters Header -->
<div class="filters-header row justify-content-center mx-1 mt-2 mb-1">
  <div class="col-12 col-md-8 d-flex align-items-center justify-content-between">
      <h4 class="my-auto mx-auto">Minhas vendas</h4>
    <div class="">
      <button type="button" name="button" class="btn ml-1">
        <i class="fas fa-sort-amount-down "></i>
      </button>
      <button type="button" name="button" class="btn ml-1">
        <i class="fas fa-filter "></i>
      </button>
    </div>
  </div>
</div>
<!-- end Filters Header -->

<!-- OrdersList-->

<div id="results-list" class="row justify-content-center mt-2 mx-0">
  <div class="col-12 col-md-6">
    {{#each offers}}
      <div class="card mb-1 btn" onclick="location.href = '/offers/{{_id}}'">
        <div class="card-body">
          <div class="text-center">
            <h7 class="card-title align-text-top text-gray">Oferta #{{_id}}</h7>
            <h5 class="card-title align-text-top product-myOrders">{{product.name}}</h5>
            <div class="row mt-3 justify-content-center">
                {{#ifCond active false}}
                  <span class="badge badge-danger mb-3">
                    <h6>Inativo</h6>
                  </span>
                {{else}}
                  <span class="badge badge-success mb-3">
                    <h6>Ativo</h6>
                  </span>
                {{/ifCond}}
            </div>
            <div class="row mt-1">
              <div class="col-12">
                <div class="form-check">
                    <div class="row justify-content-center">
                      <div class="col-md-6">
                        <h6>Estoque: {{stock}} {{product.unit}}</h6>
                      </div>
                      <div class="col-md-6">
                        <h6>Entrega: {{delivery}}</h6>
                      </div>
                    </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
<!-- end OrdersList -->

{{#section 'scripts'}}
  <script src="/javascripts/sales.js"></script>
{{/section}}
