{{#section 'stylesheets'}}
{{/section}}
<div class="pb-3 gradient-background text-white">
  <h4 class="text-center">Editar Produto</h4>
</div>
<form action="/products" method="POST">
  <div class="row d-flex justify-content-between">
    <div class="form-group col-md-3 col-10 mx-4 my-2">
      <label for="name" class="editlabel">Nome do produto</label>
      <div class="input-group mb-2">
       <div class="input-group-prepend">
         <div class="input-group-text"><i class="fas fa-cart-arrow-down"></i></div>
       </div>
       <input name="product[name]" type="text" class="form-control" value="{{name}}" id="name"></input>
      </div>
    </div>
    <div class="form-group col-md-3 mx-4 my-2">
      <label for="category" class="editlabel">Categoria</label>
      <div class="input-group mb-2">
       <div class="input-group-prepend">
         <div class="input-group-text"><i class="fas fa-boxes"></i></div>
       </div>
       <select class="form-control" name="offer[category]" id="category">
         {{#ifCond category 'Defensivos agrícolas/agrotóxicos'}}
           <option selected value="Defensivos agrícolas/agrotóxicos">Defensivos agrícolas/agrotóxicos</option>
           <option value="Fertilizantes sólidos">Fertilizantes sólidos</option>
           <option value="Sementes">Sementes</option>
           <option value="Fertilizantes líquidos/adjuvantes/biológicos">Fertilizantes líquidos/adjuvantes/biológicos</option>
         {{else ifCond category 'Defensivos agrícolas/agrotóxicos'}}
           <option selected value="Sementes">Sementes</option>
           <option value="Fertilizantes sólidos">Fertilizantes sólidos</option>
           <option value="Defensivos agrícolas/agrotóxicos"></option>
           <option value="Fertilizantes líquidos/adjuvantes/biológicos">Fertilizantes líquidos/adjuvantes/biológicos</option>
         {{else ifCond category 'Fertilizantes líquidos/adjuvantes/biológicos'}}
           <option selected value="Fertilizantes líquidos/adjuvantes/biológicos">Fertilizantes líquidos/adjuvantes/biológicos</option>
           <option value="Fertilizantes sólidos">Fertilizantes sólidos</option>
           <option value="Defensivos agrícolas/agrotóxicos"></option>
           <option value="Sementes">Sementes</option>
         {{else ifCond category 'Fertilizantes sólidos'}}
           <option selected value="Fertilizantes sólidos">Fertilizantes sólidos</option>
           <option value="Defensivos agrícolas/agrotóxicos"></option>
           <option value="Sementes">Sementes</option>
           <option value="Fertilizantes líquidos/adjuvantes/biológicos">Fertilizantes líquidos/adjuvantes/biológicos</option>
         {{/ifCond}}
       </select>
      </div>
    </div>

    <div class="form-group col-md-3 col-10 mx-4 my-2">
      <label for="description" class="editlabel">Descrição</label>
        <div class="input-group mb-2">
         <div class="input-group-prepend">
           <div class="input-group-text"><i class="fas fa-newspaper"></i></div>
         </div>
          <textarea rows="4" name="product[description]" value="{{description}}" type="text" class="form-control" id="description">{{description}}</textarea>
        </div>
    </div>
  </div>

    <div class="row d-flex justify-content-between">
      <div class="form-group col-md-3 col-10 mx-4 my-2">
        <label for="manufacturer" class="editlabel">Fabricante</label>
        <div class="input-group mb-2">
         <div class="input-group-prepend">
           <div class="input-group-text"><i class="fas fa-industry"></i></div>
         </div>
         <input name="product[manufacturer]" type="text" value="{{manufacturer}}" class="form-control" id="manufacturer">
        </div>
         <input type="radio" name="product[generic]" value="Original"></input>
        <label>Produto não genérico</label>
      </div>

      <div class="form-group col-md-3 mx-4  my-2">
        <label for="unit" class="editlabel">Unidade</label>
        <div class="input-group mb-2">
         <div class="input-group-prepend">
           <div class="input-group-text"><i class="fas fa-balance-scale"></i></div>
         </div>
         <select class="form-control" name="product[unit]" id="un">
           {{#ifCond unit 'kg'}}
             <option selected value="kg">Kilogramas</option>
             <option value="unidade">Unidade</option>
           {{else ifCond unit 'unidade'}}
             <option selected value="unidade">Unidade</option>
             <option value="kg">Kilogramas</option>
           {{/ifCond}}
         </select>
        </div>
      </div>

      <div class="form-group col-md-3 col-10 mx-4  my-2">
        <p hidden>Hidden paragraph for alignment purposes.</p>
      </div>

    </div>

    <div class="row d-flex justify-content-between">
      <div class="form-group col-md-12 mx-4 my-2">
        <label for="activeIng" class="rounded bg-black"><i class="fas fa-flask fa-sm mr-2"></i>Princípio Ativo</label>
        <div class="row">
          {{#each chem}}
            <label class="d-block col-3"><input checked type="checkbox" name="product[chem][]" class="mr-1" value="{{_id}}" id="activeIng">{{name}}</label>
          {{/each}}
          {{#ifCond offer.product.chems chems}}

          {{else}}
          {{#each chems}}
            <label class="d-block col-3"><input type="checkbox" name="product[chem][]" class="mr-1" value="{{_id}}" id="activeIng">{{name}}</label>
          {{/each}}
          {{/ifCond}}
        </div>
      </div>
  </div>
  <button class="btn btn-default bg-green text-light mx-auto mt-4 px-5 mb-3 d-block" type="submit">Salvar</button>
</form>

{{#section 'scripts'}}
{{/section}}
