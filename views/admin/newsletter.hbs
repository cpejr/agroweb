{{#section 'stylesheets'}}
{{/section}}

<div class="">
<div class="pb-3 text-center gradient-background text-white">
  <h3 class="font-black">Newsletter</h3>
</div>

<div style="overflow-x:auto;">
<table class="table table-light table-striped  text-center">
  <thead>
    <tr>
      <th scope="col">Nome</th>
      <th scope="col">Email</th>
      <th scope="col">Opções</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <td class="font-book">{{fullName}}</td>
      <td class="font-book">{{email}}</td>
      <th scope="row">
        <form action="/newsletter/{{id}}?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-outline-danger"><i class="fas fa-minus-circle"></i></button>
        </form>
      </th>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>
</div>

{{#section 'scripts'}}
{{/section}}
