{{#section 'stylesheets'}}
{{/section}}
<div class="p-3">
<div class="row">
<div class="card-body text-right col-7  ">
    <h3 class="card-title ">Usuários cadastrados</h3>
  </div>
  <div class="text-center mr-5 mt-4 ml-5">
    <button type="button col-1 color-muted" name="button" class="btn ml-1">
      <i class="fas fa-sort-amount-down float-left"></i>
    </button>
    <button type="button col-1 color-muted" name="button" class="btn ml-1">
      <i class="fas fa-filter float-left"></i>
    </button>
</div>
</div>

<!-- Users list -->
<div style="overflow-x:auto;">
  <div id="results-list" class="row justify-content-center mx-0">
    <div class="col-12">
      <table class="table table-light table-striped text-center">
        <thead>
          <tr>
            <th scope="col">Nome</th>
            <th scope="col">Status</th>
            <th scope="col">Tipo</th>
            <th scope="col">E-mail</th>
            <th scope="col">CPF/CNPJ</th>
          </tr>
        </thead>
        <tbody>
          {{#each users}}
          <tr>
            <th scope="row">{{fullName}}</th>
            <td><div class="dropdown">
              <button name="taxStatus"  type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true"
              {{#ifCond active true}}
              class="btn btn-outline-success dropdown-toggle  col-12">
              Ativo
              {{else ifCond active false}}
              class="btn btn-outline-danger dropdown-toggle  col-12">
              Inativo
              {{/ifCond}}
            </button>
            <div class="dropdown-menu col-4" aria-labelledby="dropdownMenuButton" >
              <form  method= "POST" action="/admin/updateUserActive">
                <a class="dropdown-item" href="#">
                  <button type="submit" class="btn btn-outline-success col-12" name="active" value=true>
                    Ativo
                  </button>
                </a>
              </form>
              <form method= "POST" action="/admin/updateUserActive">
                <a class="dropdown-item " href="#">
                  <button type="submit" class="btn btn-outline-danger col-12" name="active" value=false>
                    Inativo
                  </button>
                </a>
              </form>
            </div>
            <td>{{type}}</td>
            <td>{{email}}</td>
            <td>{{doc}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>
