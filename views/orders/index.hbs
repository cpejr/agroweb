<div class="ml-4">
<div class="row ml-5 ">

    {{#each transactions}}
      <div class="col-sm-12 col-md-6 col-lg-5 btn card ml-5 mt-3" >
        <div class="ml-1">
          <div class="my-1 bg-light2 card1"  onclick="location.href = '/offers/{{_id}}'">
            <div class="text-right p-2">
              <div class="row">
                <div class="col-3 d-inline-block text-center align-self-center">

                  {{#ifCond offer.product.category 'Defensivos agrícolas/agrotóxicos'}}
                    <i class="d-inline d-sm-none card-icon fas fa-bug fa-2x align-self-center"></i>
                    <i class="d-none d-sm-inline d-xl-none card-icon fas fa-bug fa-3x align-self-center"></i>
                    <i class="d-none d-xl-inline card-icon fas fa-bug fa-4x text-left"></i>
                  {{else ifCond offer.product.category 'Sementes'}}
                    <i class="d-inline d-sm-none card-icon fas fa-dot-circle fa-2x align-self-center"></i>
                    <i class="d-none d-sm-inline d-xl-none card-icon fas fa-dot-circle fa-3x align-self-center"></i>
                    <i class="d-none d-xl-inline card-icon fas fa-dot-circle fa-4x align-self-center"></i>
                  {{else ifCond offer.product.category 'Fertilizantes sólidos'}}
                    <i class="d-inline d-sm-none card-icon fas fa-seedling fa-2x align-self-center"></i>
                    <i class="d-none d-sm-inline d-xl-none card-icon fas fa-seedling fa-3x align-self-center"></i>
                    <i class="d-none d-xl-inline card-icon fas fa-seedling fa-4x align-self-center"></i>
                  {{else ifCond offer.product.category 'Fertilizantes líquidos/adjuvantes/biológicos'}}
                    <i class="d-inline d-sm-none card-icon fas fa-tint fa-2x align-self-center"></i>
                    <i class="d-none d-sm-inline d-xl-none card-icon fas fa-tint fa-3x align-self-center"></i>
                    <i class="d-none d-xl-inline card-icon fas fa-tint fa-4x align-self-center"></i>
                  {{/ifCond}}
                </div>
                <div class="col p-2">
                  <div class="vl">
                    <div class="ml-2">
                      <h5 class="text-left align-text-top card-text font-black text-green mobile-font1 text-uppercase">
                        {{offer.product.name}}
                      </h5>

                    </div>
                    <div class="ml-2 mt-3">
                      <div class="text-left side-animation">
                        <h4 class="font-book mobile-font4 mobile-font5  d-inline" data-usd={{usd}}>
                          R$ {{unitPrice}}
                        </h4>
                        <i class="text-gray3 mt-2 font-light mobile-font1 d-inline">
                          / {{offer.product.unit}}
                        </i>
                      </div>
                    </div>
                  <div class="row align-rightS">
                    <div class="smaller-font d-flex text-center mt-3 align-bottom">
                      <div class="ml-4  text-gray3">
                        <p class="text-uppercase font-book mobile-font2 ">Compra
                          {{#ifCond offer.delivery 'em até 48 horas'}}
                          <span class="count font-light mobile-font2"> <br/>Solo</span>
                          {{else }}
                          <span class="count font-light mobile-font2"> <br/>Grupo</span>
                          {{/ifCond}}

                        </p>
                      </div>

                      <div class="ml-4 text-gray3">
                        <p class="text-uppercase font-book mobile-font2 ">Entrega
                          <span class="count font-light mobile-font2"> <br/>{{offer.delivery}}</span>
                        </p>
                      </div>

                      <div class="ml-4  text-gray3">
                        <p class="text-uppercase text-center font-book mobile-font2">Qnt
                          <span class="count text-center font-light mobile-font2"> <br/>{{amountBought}}</span>
                        </p>
                      </div>
                      <div class="ml-4 text-gray3">
                        <p class="text-uppercase font-book mobile-font2">Custo total
                          <span class="count text-center font-light mobile-font2"> <br/>{{priceBought}}</span>
                        </p>
                      </div>
                    </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
      </div>
    </div>
    {{/each}}
    </div>
  </div>





