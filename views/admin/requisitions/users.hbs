{{#section 'stylesheets'}}
{{/section}}

<div class="">
  <div class="text-center pb-3 gradient-background text-white">
    <h3 class="font-black">Requisições de cadastros</h3>
  </div>

  {{#if users}}

  <div class="text-center p-3">
    <button type="button col-1 color-muted" name="button" class="btn ml-1">
      <i class="fas fa-sort-amount-down float-left"></i>
    </button>
    <button type="button col-1 color-muted" name="button" class="btn ml-1">
      <i class="fas fa-filter float-left"></i>
    </button>
  </div>
<!-- Users list -->

<div style="overflow-x:auto;">
  <table class="table table-light table-striped text-center">
    <thead>
      <tr>
        <th scope="col">Nome</th>
        <th scope="col">Tipo</th>
        <th scope="col font-black">Perfil</th>
        <th scope="col font-black">Aceitar</th>
        <th scope="col font-black">Bloquear</th>
      </tr>
    </thead>
    <tbody>

      {{#each users}}

      {{#ifCond status 'Aguardando aprovação'}}
      <tr>
        <th scope="row">{{fullName}}</th>
        <td>{{type}}</td>
        <td>
          <button onclick="location.href='/user/profile/{{_id}}'" class="btn btn-outline-info font-book">
            <i class="fas fa-user fa-lg"></i>
          </button>
        </td>
        <td>
          <form  method= "POST" action="/admin/{{id}}/requisitions/users">
            <button type="submit" align="center" class="btn btn-outline-success " name="status" value="Ativo">
              <i class="fas fa-check-circle fa-lg"></i>
            </button>
          </form>
        </td>
        <td>
          <form  method= "POST" action="/admin/{{id}}/requisitions/users">
            <button type="submit" align="center" class="btn btn-outline-danger " name="status" value="Bloqueado">
              <i class="fas fa-times-circle fa-lg"></i>
            </button>
          </form>
        </td>
      </tr>
      {{/ifCond}}
      {{/each}}

    </tbody>
  </table>
</div>
{{else}}
<div class="container">
  <p class="text-center font-light">Não há novas requisições de cadastro.</p>
</div>
{{/if}}
  </div>
</div>
{{#section 'scripts'}}
{{/section}}
