{{#section 'stylesheets'}}
{{/section}}

<div class="">
<div class="">
  <div class="text-center pb-3 gradient-background text-white">
    <h3 class="font-black">Ofertas atuais</h3>
  </div>
</div>

<div style="overflow-x:auto;">
<table class="table table-light table-striped text-center">
  <thead>
    <tr>
      <th scope="col">Quantidade em Estoque</th>
      <th scope="col">Preço</th>
      <th scope="col">Entrega</th>
      <th scope="col">Vendedor</th>
      <th scope="col">Produto</th>
      <th colspan="2" scope="col font-black">Opções</th>
    </tr>
  </thead>
  <tbody>
    {{#each offers}}
    <tr>
      <td class="font-book">{{stock}}</td>
      <td class="font-book" data-usd={{usd}}>R$ {{price.average}}</td>
      <td class="font-book">{{delivery}}</td>
      <td class="font-book">{{seller.fullName}}</td>
      <td class="font-book">{{product.name}}</td>
      <td class="font-book">
        <button onclick="location.href='/offers/{{id}}'" class="btn btn-outline-info">
          Ver
        </button>
      </td>
      <td class="font-book">
        <button onclick="location.href='/admin/{{id}}/deleteOffer'" class="btn btn-outline-danger">
          Excluir
        </button>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>
</div>

{{#section 'scripts'}}
<script src="/javascripts/money.js"></script>
{{/section}}
