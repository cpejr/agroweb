{{#section 'stylesheets'}}
{{/section}}

<!-- NavBar -->
<div class="pos-f-t">
  <nav class="navbar navbar-dark">
    <button class="btn btn-outline-dark" type="button" onclick="history.back()">
      <i class="fas fa-arrow-left fa-2x"></i>
    </button>

    <form id="navbar-form" action="./results" method="get" class="float-right my-2 my-lg-0 my-sm-0">
      <input class="form-control my-2 my-sm-0 float-right" type="search" placeholder="Buscar">
      <button class="btn btn-outline-dark " type="button">
        <i class="fas fa-search fa-2x"></i>
      </button>
    </form>
  </nav>
</div>
<!-- end NavBar -->


<div class="card text-center">
  <div class="row mx-auto card-body">
    <h3 class="card-title">Produtos dispon√≠veis</h3>
    <span class="float-right pull-right">
      <button onclick="location.href = '/products/new'" class="btn btn-outline-info">Novo</button>
    </span>
  </div>
</div>
<!-- Chems list -->
<div id="results-list" class="row justify-content-center mt-2 mx-0">
  <div class="text-center">
    <table class="table table-responsive table-striped table-dark col-md-12">
      <thead>
        <tr>
          <th scope="col">Nome</th>
          <th scope="col">Categoria</th>
          <th scope="col">Fabricante</th>
          <th scope="col">Ver</th>
          <th scope="col">Editar</th>
          <th scope="col">Excluir</th>
        </tr>
      </thead>
      <tbody>
      {{#each products}}
        <tr>
          <th scope="row">{{name}}</th>
          <th scope="row">{{category}}</th>
          <th scope="row">{{manufacturer}}</th>
          <th scope="row">
            <button onclick="location.href='/products/{{id}}'" class="btn btn-outline-success">Ver</button>
          </th>
          <th scope="row">
            <button onclick="location.href='/products/{{id}}/edit'" class="btn btn-outline-info">Editar</button>
          </th>
          <th scope="row">
            <form method="post">
            <!-- <form action="/products/{{id}}?_method=DELETE" method="POST"> -->
              <button type="submit" class="btn btn-outline-danger">Excluir</button>
            </form>
          </th>
        </tr>
      {{/each}}
      </tbody>
    </table>
  </div>
</div>
<!-- end chems list -->

{{#section 'scripts'}}
  <script src="/javascripts/navbar.js"></script>
{{/section}}
