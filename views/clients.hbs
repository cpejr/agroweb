{{#section 'stylesheets'}}
{{/section}}

{{#compare userType 'Franqueado'}}
<div class="pb-3 gradient-background text-white">
  <h3 class="text-center font-black">Meus clientes</h3>
</div>

<div class="p-3">
  <div class="row justify-content-center">
    {{#if clients}}
    {{#each clients}}
    {{#compare client.status 'Aguardando aprovação'}}
    {{else}}
    <div class="col-sm-12 col-md-6 col-lg-6 btn card m-3" >
      <div class="my-1 bg-light2 card1"  onclick="location.href = '/user/profile/{{_id}}'">
        <div class="text-right p-2">
          <div class="row">
            <div class="col-md-3 col-1 d-inline-block text-center align-self-center">
              <i class="d-inline d-sm-none card-icon fas fa-user align-self-center"></i>
              <i class="d-none d-sm-inline d-xl-none card-icon fas fa-user fa-3x align-self-center"></i>
              <i class="d-none d-xl-inline card-icon fas fa-user fa-4x align-self-center"></i>
            </div>

            <div class="col p-2">
              <div class="vl">
                <div class="ml-2">
                  <p class="text-left align-text-top card-text font-black text-green mobile-font1 text-uppercase">
                    {{fullName}}
                  </p>
                </div>

                <div class="ml-2 mt-3">
                  <div class="text-left">
                    <p class="text-left align-text-top card-text mobile-font1 text-uppercase">
                      {{email}}
                    </p>
                  </div>
                </div>

                <div class="ml-2 mt-3">
                  <div class="text-left">
                    <p class="text-left align-text-top card-text mobile-font1 text-uppercase">
                      {{phone}}
                    </p>
                  </div>
                </div>

                <div class="ml-2 mt-3">
                  <div class="text-left">
                    <p class="text-left align-text-top card-text mobile-font1 text-uppercase">
                      {{address.city}}
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- end CARD PADRÃO -->
    {{/compare}}
    {{/each}}
    {{else}}
    <div class="container">
      <p class="text-center font-light">Você ainda não possui nenhum cliente.</p>
    </div>
    {{/if}}
  </div>
</div>

