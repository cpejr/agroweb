{{#section 'stylesheets'}}
{{/section}}

<!-- Filters Header -->
<div class="filters-header row justify-content-center mx-1 mt-2 mb-1">
  <div class="col-12 col-md-8 d-flex align-items-center justify-content-between">
      <h4 class="my-auto mx-auto">Minhas vendas</h4>
    <div class="">
      <button type="button" name="button" class="btn ml-1">
        <i class="fas fa-sort-amount-down "></i>
      </button>
      <button type="button" name="button" class="btn ml-1">
        <i class="fas fa-filter "></i>
      </button>
    </div>
  </div>
</div>
<!-- end Filters Header -->

<!-- OrdersList-->

<div id="results-list" class="row justify-content-center mt-2 mx-0">
  <div class="col-12 col-md-6">
    {{#each sales}}
      <div class="card mb-1">
        <div class="card-body">
          <div class="text-center">
            <h7 class="card-title align-text-top text-gray">Venda #{{_id}} </h7>
            <div class="w-100">
            </div>
            <div class="row mt-3 justify-content-center">
                {{#ifCond status 'Aguardando pagamento'}}
                  <span class="badge badge-warning mb-3">
                {{else ifCond status 'Pagamento confirmado'}}
                  <span class="badge badge-primary mb-3">
                {{else ifCond status 'Produto enviado'}}
                      <span class="badge badge-success mb-3">
                {{else ifCond status 'Cancelado'}}
                      <span class="badge badge-danger mb-3">
                {{/ifCond}}
                <h6>{{status}}</h6>
              </span>
            </div>

            <div class="row mt-1">
              <div class="col-12">
                <div class="form-check">
                  <form id="status-payment-form" class="" action="/sales" method="get"> <!--sustituir # pela rota de mudanÃ§a de status de pagamento-->
                    {{#ifCond status 'Aguardando pagamento'}}
                    <div class="row justify-content-center">
                      <div class="col-md-6">
                        <input type="checkbox" class="form-check-input" id="paid" name="status[{{name}}]" value="Pagamento confirmado">
                        <label class="form-check-label mb-2" for="paid">O pagamento foi realizado?</label>
                      </div>
                      <div class="col-md-6">
                        <input type="checkbox" class="form-check-input" id="delivered" disabled>
                        <label class="form-check-label" for="deliver">O produto foi enviado?</label>
                      </div>
                    </div>
                    {{else ifCond status 'Pagamento confirmado'}}
                    <div class="row">
                      <div class="col-md-6">
                        <input type="checkbox" class="form-check-input" id="paid" checked disabled>
                        <label class="form-check-label mb-2" for="paid">O pagamento foi realizado?</label>
                      </div>
                      <div class="col-md-6">
                        <input type="checkbox" class="form-check-input" id="delivered" name="status[{{name}}]" value="Produto enviado">
                        <label class="form-check-label" for="deliver">O produto foi enviado?</label>
                      </div>
                    </div>
                    {{else ifCond status 'Produto enviado'}}
                    <div class="row">
                      <div class="col-md-6">
                        <input type="checkbox" class="form-check-input" id="paid" checked disabled>
                        <label class="form-check-label mb-2" for="paid">O pagamento foi realizado?</label>
                      </div>
                      <div class="col-md-6">
                        <input type="checkbox" class="form-check-input" id="delivered" checked disabled>
                        <label class="form-check-label" for="deliver">O produto foi enviado?</label>
                      </div>
                    </div>
                    {{/ifCond}}
                </form>
                </div>
              </div>
            </div>

          </div>
          <h5 class="card-title align-text-top product-myOrders">{{offer.product.name}}</h5>
        </div>
      </div>
    {{/each}}
  </div>
</div>
<!-- end OrdersList -->

{{#section 'scripts'}}
  <script src="/javascripts/sales.js"></script>
{{/section}}
