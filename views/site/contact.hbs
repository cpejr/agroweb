{{#section 'stylesheets'}}
<link rel='stylesheet' href='/stylesheets/home.css'>
{{/section}}

<!-- NavBar -->
<header class="bg-dark">
  <h1 class="d-none">MegaPool</h1>
  <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
    <a href="/site/">
      <img class="ml-2 mt-2 navbar-brand text-center pr-3" src="/images/logo menor.png" alt="MegaPool"></a>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link pr-2" href="/site/about">Sobre</a>
          </li>
          <li class="nav-item">
            <a class="nav-link pr-2" href="/site/franchisee">Franqueado</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/site/contact">Contato</a>
          </li>
        </ul>
      </div>
    </nav>
  </header>
  <!-- end NavBar -->
  <div class="container mb-5 mx-auto">
    <div class="row mb-5" id="contact">
      <div class="col-12">
        <div class="mt-5 p-3 text-center mx-auto">
          <h1>Contato</h1>
        </div>
        <!-- Contact Form -->
        <!-- novalidate -->
        <!-- <form action="/site/contact" method="POST" novalidate> -->
        <div class="mx-auto col-sm-12 col-md-10 col-lg-6">
          <div class="mx-auto">
            <form action="/site/contact" method="POST" novalidate>

              <div class="user-input">
                <br/>
                <div class="input-group mb-2">
                  <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-user"></i></div>
                  </div>
                  <input name="name" type="text" class="form-control input-text" required/>
                  <label class="floating-label text-dark2">Nome</label>
                </div>
              </div>

              <div class="user-input">
                <br/>
                <div class="input-group mb-2">
                  <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-at"></i></div>
                  </div>
                  <input name="clientEmail" type="email" class="form-control input-text" required/>
                  <label class="floating-label text-dark2">E-mail</label>
                </div>
              </div>

              <div class="user-input">
                <br/>
                <div class="input-group mb-2">
                  <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-envelope"></i></div>
                  </div>
                  <input name="subject" type="text" class="form-control input-text" required/>
                  <label class="floating-label text-dark2">Assunto</label>
                </div>
              </div>

              <div class="user-input">
                <br/>
                <div class="input-group mb-2">
                  <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-comment"></i></div>
                  </div>
                  <textarea name="content" type="text" class="form-control input-text" rows="3" required/></textarea>
                  <label class="floating-label text-dark2">Mensagem</label>
                </div>
              </div>

              <div class="row mt-5">
                <div class="col-12 col-sm-4 col-md-4 mx-auto">
                  <button type="submit" class=" btn w-100 bg-green text-white">Enviar</button>
                </div>
              </div>
            </form>
            <!-- end Contact Form -->
          </div>
        </div>
      </div>
    </div>
  </div>

  <footer class="bg-dark mt-5">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <form action="/newsletter" method="post">
            <div class="row justify-content-center form-row" id="form-nl">
              <label><p class="text-dark2"> Cadastre-se na nossa newsletter para ficar por dentro das novidades da plataforma: </label>
              </div>
              <div class="row justify-content-center form-row" id="form-nl">
                <div class="col-12 col-md-8">
                  <input type="name" placeholder="Nome completo" class="form-control" name="newsletter[fullName]" id="name">
                  <input type="email" placeholder="Email" class="form-control mt-2" name="newsletter[email]" id="mail">
                </div>
                <div class="col-12 col-md-3">
                  <button type="submit" class="btn btn-primary btn-block">Cadastre-se</button>
                </div>
              </div>
            </form>
          </div>

          <div class="col-12 col-md-4 mt-4">
            <img class="float-left grayscale footer-brand border-right pr-3 mr-3" src="/images/logo menor.png" alt="MegaPool">
            <div class="">
              <ul class="list-unstyled">
                <li><a class="text-dark2" href="/site/about">Sobre</a></li>
                <li><a class="text-dark2" href="/site/franchisee">Trabalhe conosco</a></li>
                <li><a class="text-dark2" href="/site/contact">Contato</a></li>
                <li></li>
                <li></li>

              </ul>
            </div>
          </div>

          <div class="col-12 col-md-4 mt-4">
            <div class="row justify-content-center">
              <a class="social facebook" href="https://www.facebook.com/megapoolagro"><i class="mt-2 fa fa-facebook fa-2x"></i></a>
              <a class="social twitter" href="https://twitter.com/megapoolagro"><i class="mt-2 fa fa-twitter fa-2x"></i></a>
              <a class="social linkedin" href="https://www.linkedin.com/company/megapoolagro"><i class="mt-2 fa fa-linkedin fa-2x"></i></a>
              <a class="social youtube" href="https://www.youtube.com/channel/UCJ42yAsesMyVJJsZUJt20pw"><i class="mt-2 fa fa-youtube fa-2x"></i></a>
            </div>
          </div>

          <div class="col-12 col-md-4 mt-4">
            <div class="text-left text-md-right text-dark2 mt-3">
              <ul class="list-unstyled">
                <li>Rua Gloria Senna, Sítio Cercado, nº 67. Curitiba-PR</li>
                <li>CEP: 81900-670</li>
                <li>Email: contato@megapool.com.br</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </footer>

