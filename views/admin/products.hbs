{{#section 'stylesheets'}}
{{/section}}

<div class="p-3">
<div class="row justify-content-center mt-2 mx-0">
  <div class="col-3">
  </div>

  <div class="col-6">
    <div class="text-center p-3">
      <h3>Produtos disponíveis</h3>
    </div>
  </div>

  <div class="col-3">
    <div class="text-right p-3">
      <button onclick="location.href = '/products/new'" class="btn btn-outline-info">Adicionar novo produto</button>
    </div>
  </div>
</div>

<!-- Chems list -->

    <div style="overflow-x:auto;">
    <table class="table table-striped text-center table-light col-md-12 ">
      <thead>
        <tr>
          <th scope="col">Nome</th>
          <th scope="col">Categoria</th>
          <th scope="col">Fabricante</th>
          <th scope="col"></th>
          <th scope="col">Opções</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
      {{#each products}}
        <tr>
          <th scope="row">{{name}}</th>
          <th scope="row">{{category}}</th>
          <th scope="row">{{manufacturer}}</th>
          <th scope="row">
            <button onclick="location.href='/products/{{id}}'" class="btn btn-outline-success">Ver</button>
          </th>
          <th scope="row">
            <button onclick="location.href='/products/{{id}}/edit'" class="btn btn-outline-info">Editar</button>
          </th>
          <th scope="row">
            <form method="post">
            <!-- <form action="/products/{{id}}?_method=DELETE" method="POST"> -->
              <button type="submit" class="btn btn-outline-danger">Excluir</button>
            </form>
          </th>
        </tr>
      {{/each}}
      </tbody>
    </table>
  </div>
</div>
<!-- end chems list -->

{{#section 'scripts'}}
{{/section}}
